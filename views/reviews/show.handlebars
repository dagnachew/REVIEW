{{> header}}

<div class="container">
    <div class="row">
        <div class="col-md-3  mt-5">
            <p class="lead">Site Title</p>
            <div class="list-group">
                <li class="list-group-item active">1</li>
                <li class="list-group-item">2</li>
                <li class="list-group-item">3</li>
            </div>
        </div>
        <div class="col-md-9 mt-5">
            <div >
                <img src="{{review.image}}" alt="" class="img-responsive">
                <h4 class="mt-3">{{review.title}}</h4>
                <p>{{review.review}}</p>
                <p>Created on: {{review.created}}</p>
            </div>
            <div class="card">
                <div class="text-right"><a href="/reviews/{{review._id}}/comments/new" class="btn btn-primary mt-2 mr-2">New Comment</a></div>
                <div class="row">
                    <div class="col-md-12 p-4">
                        {{#each review.comments}}
                            <p>{{this.author}} - {{this.text}}</p>
                        {{/each}}
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


