{{> header}}

<div class="container">
    <div class="row mt-5">
        <h1 class="mx-auto">Add a new comment to {{this.review.title}}</h1>
    </div>
    <div class="col-md-12">
        <form action="/reviews/{{review._id}}/comments" method="post">
            <div class="form-group">
                <label for="title">Text</label>
                <input type="text" name="comment[text]" placeholder="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="title">Author</label>
                <input type="text" name= "comment[author]" placeholder="author"  class="form-control"> 
            </div>
            <div class="form-group">
                <button class="btn btn-outline btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>